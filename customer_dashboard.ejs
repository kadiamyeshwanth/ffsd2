        /* Hero Section */
        .hero-section {
            position: relative;
            height: 400px;
            background-image: url('https://cdn.pixabay.com/photo/2021/03/22/21/04/house-6115719_1280.jpg');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            padding: 0 40px;
        }

        .hero-section:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to right, rgba(13, 26, 68, 0.8), rgba(13, 26, 68, 0.4));
        }

        .hero-text {
            position: relative;
            z-index: 1;
            color: white;
            font-size: 42px;
            font-weight: bold;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
        }

        /* Services Section */
        .services-section {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px 0;
        }

        .services-heading {
            text-align: center;
            margin-bottom: 30px;
            animation: fadeInDown 0.8s ease forwards;
        }

        .services-heading h2 {
            font-size: 28px;
            color: #0d1a44;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .heading-underline {
            display: inline-block;
            width: 80px;
            height: 3px;
            background: linear-gradient(to right, #e9c46a 80%, #0d1a44 20%);
            animation: expandWidth 1s ease-in-out forwards;
        }

        .services-tagline {
            text-align: center;
            margin-bottom: 40px;
            font-size: 16px;
            line-height: 1.5;
            color: #0d1a44;
            animation: fadeIn 1.2s ease forwards;
        }

        .services-container {
            display: flex;
            overflow-x: auto;
            scroll-behavior: smooth;
            scrollbar-width: thin;
            scrollbar-color: #e9c46a #ebebeb;
            gap: 15px;
            padding: 10px 0;
        }

        .services-container::-webkit-scrollbar {
            height: 8px;
        }

        .services-container::-webkit-scrollbar-track {
            background: #ebebeb;
            border-radius: 10px;
        }

        .services-container::-webkit-scrollbar-thumb {
            background-color: #e9c46a;
            border-radius: 10px;
        }

        .service-card {
            flex: 0 0 220px;
            border: 1px solid #e0e0e0;
            padding: 20px 15px;
            text-align: center;
            transition: all 0.3s ease;
            background-color: white;
            position: relative;
            overflow: hidden;
            cursor: pointer;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            animation: slideInRight 0.5s ease forwards;
            animation-delay: calc(0.1s * var(--order));
            opacity: 0;
        }

        .service-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            z-index: 2;
        }

        .service-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 5px;
            height: 0;
            background-color: #e9c46a;
            transition: height 0.3s ease;
        }

        .service-card:hover::before {
            height: 100%;
        }

        .service-icon {
            width: 50px;
            height: 50px;
            margin: 0 auto 15px;
            transition: transform 0.3s ease;
        }

        .service-card:hover .service-icon {
            transform: scale(1.1);
        }

        .service-icon img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .service-title {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 15px;
            color: #0d1a44;
            transition: color 0.3s ease;
        }

        .service-card:hover .service-title {
            color: #e9c46a;
        }

        .service-description {
            font-size: 13px;
            line-height: 1.4;
            margin-bottom: 15px;
            color: #666;
            height: 55px;
        }

        .title-underline {
            display: block;
            width: 40px;
            height: 3px;
            background-color: #e9c46a;
            margin: 10px auto;
            transition: width 0.3s ease;
        }

        .service-card:hover .title-underline {
            width: 60px;
        }

        .book-now-btn {
            background-color: #e9c46a;
            color: white;
            border: none;
            padding: 8px 15px;
            font-size: 13px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 5px;
            border-radius: 4px;
            position: relative;
            overflow: hidden;
        }

        .book-now-btn:hover {
            background-color: #d4a747;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(233, 196, 106, 0.3);
        }

        .book-now-btn::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: -100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }

        .book-now-btn:hover::after {
            left: 100%;
        }

        .services-navigation {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

        .nav-btn {
            background-color: #e9c46a;
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            font-size: 18px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .nav-btn:hover {
            background-color: #d4a747;
            transform: scale(1.1);
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes expandWidth {
            from {
                width: 0;
            }
            to {
                width: 80px;
            }
        }

        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .steps {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 40px;
            flex-wrap: wrap;
        }
        .step {
            text-align: center;
            max-width: 150px;
        }
        .step img {
            width: 60px;
            height: 60px;
        }
        .step-number {
            font-size: 48px;
            font-weight: bold;
            color: #ddd;
        }
        .step-title {
            font-size: 16px;
            font-weight: bold;
            margin-top: 10px;
        }

        /* Stats Section */
        .stats-background {
            background-color: #0d1a44;
            padding: 40px 0;
            position: relative;
            overflow: hidden;
        }

        .stats-container {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            margin: 2px;
            padding: 10px;
            text-align: center;
        }

        .stat-item {
            text-align: center;
            width: 180px;
            margin: 20px;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

        .stat-item.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .stat-icon {
            font-size: 40px;
            color: #e9c46a;
            margin-bottom: 10px;
        }

        .stat-number {
            font-size: 36px;
            font-weight: bold;
            color: white;
            margin: 5px 0;
        }

        .stat-text {
            color: #e9c46a;
            font-size: 16px;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
            }
        }

        .stat-icon {
            animation: pulse 2s infinite;
        }

        .stat-item:nth-child(1) .stat-icon {
            animation-delay: 0s;
        }

        .stat-item:nth-child(2) .stat-icon {
            animation-delay: 0.2s;
        }

        .stat-item:nth-child(3) .stat-icon {
            animation-delay: 0.4s;
        }

        .stat-item:nth-child(4) .stat-icon {
            animation-delay: 0.6s;
        }

        .stat-item:nth-child(5) .stat-icon {
            animation-delay: 0.8s;
        }

        /* Portfolio Section */
        .container {
            max-width: 1000px;
            margin: 51px auto;
            padding: 15px;
            position: relative;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 28px;
            margin-bottom: 8px;
            font-weight: bold;
        }

        .header-line {
            display: inline-block;
            width: 100px;
            height: 3px;
            background: linear-gradient(to right, #e9c46a, #0d1a44);
            margin: 4px auto 15px;
        }

        .subheader {
            text-align: center;
            max-width: 750px;
            margin: 0 auto 40px;
            line-height: 1.5;
            font-size: 15px;
            color: #0d1a44;
        }

        .portfolio-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }

        .portfolio-item {
            position: relative;
            background: #fff;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 250px;
        }

        .portfolio-item:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            z-index: 1;
        }

        .portfolio-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: all 0.3s ease;
        }

        .portfolio-info {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: rgba(255, 255, 255, 0.9);
            padding: 12px;
            text-align: center;
            transform: translateY(100%);
            transition: transform 0.3s ease;
        }

        .portfolio-item:hover .portfolio-info {
            transform: translateY(0);
        }

        .portfolio-location {
            font-weight: bold;
            margin-bottom: 4px;
            color: #0d1a44;
        }

        .portfolio-size {
            color: #666;
            font-size: 13px;
        }

        .highlight-box {
            grid-column: 3;
            grid-row: 2;
            background-color: #fff;
            padding: 20px;
            border: 2px solid #e9c46a;
            border-radius: 5px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            height: 250px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .highlight-box:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

        .highlight-box h2 {
            margin-bottom: 15px;
            font-size: 21px;
            color: #0d1a44;
        }

        .highlight-box p {
            margin-bottom: 20px;
            color: #666;
            font-size: 14px;
        }

        .more-button {
            display: inline-block;
            background-color: #e9c46a;
            color: white;
            padding: 8px 20px;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            text-decoration: none;
            text-transform: uppercase;
            transition: background-color 0.3s;
            cursor: pointer;
            font-size: 14px;
        }

        .more-button:hover {
            background-color: #d4a747;
        }

        .watermark {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 20px;
            color: rgba(255, 255, 255, 0.7);
            pointer-events: none;
            z-index: 2;
            opacity: 0.5;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.9);
            z-index: 100;
        }

        .modal-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            max-width: 90%;
            max-height: 90%;
        }

        .modal-content img {
            width: 100%;
            height: auto;
            max-height: 90vh;
            object-fit: contain;
        }

        .close-modal {
            position: absolute;
            top: 20px;
            right: 20px;
            color: white;
            font-size: 30px;
            font-weight: bold;
            cursor: pointer;
        }
        .container-teams{
            margin-top: 1.5rem;
            margin-bottom: 2rem;
            display: flex;
            max-width: 1100px;
            margin: auto;
            background: white;
            border-radius: 15px;
            border: 2px solid #ddd;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .left {
            flex: 1;
            text-align: center;
            position: sticky;
            top: 20px;
            align-self: flex-start;
        }

        .left h1 {
            font-size: 2.8rem;
            color: #002147;
        }

        .left p {
            font-size: 1.2rem;
            color: #555;
            margin-top: 10px;
            max-width: 80%;
            margin-left: auto;
            margin-right: auto;
        }

        .right {
            flex: 1;
            position: relative;
        }

        .timeline {
            position: relative;
            padding-left: 30px;
        }

        .line {
            position: absolute;
            left: 20px;
            top: 0;
            width: 4px;
            height: 0;
            border-left: 4px dotted #bbb;
            transition: all 0.7s ease-in-out;
        }

        .timeline-item {
            display: flex;
            align-items: flex-start;    
            margin-bottom: 60px;
            position: relative;
        }

        .timeline-item .icon {
            width: 50px;
            height: 50px;
            background: white;
            color: #F9B208;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 22px;
            margin-right: 15px;
            border: 3px solid #F9B208;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
            transition: background 0.5s ease-in-out;
        }

        .content {
            max-width: 500px;
        }

        .content h2 {
            font-size: 1.6rem;
            color: #002147;
            display: flex;
            align-items: center;
        }

        .content p {
            font-size: 1rem;
            color: #555;
            line-height: 1.6;
            word-wrap: break-word;
            align-items: center;
            justify-content: center;
        }

        .scroll-effect {
            border-left: 4px solid #F9B208;
        }

        /* Footer Section */
        .footer {
            background-color: #0d1a44;
            padding: 15px 0;
            text-align: center;
            font-size: 14px;
            color: white;
        }

        .footer a {
            color: #e9c46a;
            text-decoration: none;
            margin: 0 10px;
        }

        .footer a:hover {
            text-decoration: underline;
        }

        .back-to-top {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 40px;
            height: 40px;
            background-color: #e9c46a;
            display: flex;
            justify-content: center;
            align-items: center;
            text-decoration: none;
            color: white;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        .back-to-top:hover {
            background-color: #d4a747;
        }
    </style>
</head>
