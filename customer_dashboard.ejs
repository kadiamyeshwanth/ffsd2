    <script>
        const notificationIcon = document.getElementById('notificationIcon');
        const notificationPanel = document.getElementById('notificationPanel');

        notificationIcon.addEventListener('click', function(e) {
            e.stopPropagation();
            notificationPanel.classList.toggle('show');
        });

        document.addEventListener('click', function(e) {
            if (!notificationPanel.contains(e.target) && !notificationIcon.contains(e.target)) {
                notificationPanel.classList.remove('show');
            }
        });

        // animate counting up
        function animateCounter(element, target, duration) {
            let start = 0;
            const increment = target / (duration / 16);
            const timer = setInterval(() => {
                start += increment;
                if (start >= target) {
                    clearInterval(timer);
                    element.textContent = target.toLocaleString() + '+';
                } else {
                    element.textContent = Math.floor(start).toLocaleString();
                }
            }, 16);
        }

        //check if element is in viewport
        function isInViewport(element) {
            const rect = element.getBoundingClientRect();
            return (
                rect.top >= 0 &&
                rect.left >= 0 &&
                rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
                rect.right <= (window.innerWidth || document.documentElement.clientWidth)
            );
        }

        //scroll and initialize animations
        function handleScroll() {
            const statItems = document.querySelectorAll('.stat-item');

            statItems.forEach(item => {
                if (isInViewport(item) && !item.classList.contains('visible')) {
                    item.classList.add('visible');

                    // Start counter animation
                    const numberElement = item.querySelector('.stat-number');
                    const targetValue = parseInt(numberElement.getAttribute('data-target'));

                    // Adjust duration  on size of number
                    let duration = 2000;
                    if (targetValue > 10000) duration = 3000;
                    if (targetValue > 100000) duration = 4000;

                    animateCounter(numberElement, targetValue, duration);
                }
            });
        }

        // Initialize animations
        document.addEventListener('DOMContentLoaded', () => {
            handleScroll();
            window.addEventListener('scroll', handleScroll);
        });

        // Scroll effect for timeline
        window.addEventListener('scroll', function() {
            let line = document.getElementById('scrollLine');
            let timeline = document.querySelector('.timeline');
            let items = document.querySelectorAll('.timeline-item');
            let topPosition = timeline.getBoundingClientRect().top;
            let windowHeight = window.innerHeight;

            let totalHeight = 0;
            items.forEach((item, index) => {
                let itemTop = item.getBoundingClientRect().top;
                if (itemTop < windowHeight / 1.5) {
                    totalHeight = item.offsetTop;
                    item.querySelector('.icon').style.background = '#e9c46a';
                    item.querySelector('.icon').style.color = 'white';
                } else {
                    item.querySelector('.icon').style.background = 'white';
                    item.querySelector('.icon').style.color = '#e9c46a';
                }
            });
            line.style.height = totalHeight + "px";
            line.classList.add('scroll-effect');
        });
