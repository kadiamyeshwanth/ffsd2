  <script>
  // Wait for DOM to be fully loaded
document.addEventListener('DOMContentLoaded', function() {
  // Get modal elements
  const applicationModal = document.getElementById('applicationModal');
  const companyModal = document.getElementById('companyModal');
  const applicationCompanyName = document.getElementById('applicationCompanyName');
  
  // Get all "View Details" buttons
  const viewDetailsButtons = document.querySelectorAll('.view-details');
  
  // Get all "Apply Now" buttons from company cards
  const applyButtons = document.querySelectorAll('.apply-now');
  
  // Get the "Apply Now" button from the company details modal
  const modalApplyButton = document.getElementById('modalApplyButton');
  
  // Get all modal close buttons
  const closeButtons = document.querySelectorAll('.close-modal');
  const cancelButton = document.querySelector('.close-form');
  
  // Tab functionality
  const tabs = document.querySelectorAll('.nav-link');
  tabs.forEach(tab => {
    tab.addEventListener('click', function() {
      tabs.forEach(t => t.classList.remove('active'));
      this.classList.add('active');
      const tabPanes = document.querySelectorAll('.tab-pane');
      tabPanes.forEach(pane => pane.classList.remove('active'));
      const tabId = this.getAttribute('data-tab');
      document.getElementById(tabId).classList.add('active');
    });
  });

  // Function to open the application modal with company info
  function openApplicationModal(companyId, companyName) {
    // Set the company name in the application modal header
    applicationCompanyName.textContent = `Apply to ${companyName}`;
    
    // Set a hidden field for the company ID (you might need to add this to your form)
    const companyIdField = document.createElement('input');
    companyIdField.type = 'hidden';
    companyIdField.name = 'companyId';
    companyIdField.value = companyId;
    
    // Add or replace the hidden field in the form
    const existingField = document.querySelector('input[name="companyId"]');
    if (existingField) {
      existingField.value = companyId;
    } else {
      document.getElementById('jobApplicationForm').prepend(companyIdField);
    }
    
    // Set the form action with the company ID
    document.getElementById('jobApplicationForm').action = `/worker_request/${companyId}`;
    
    // Show the application modal
    applicationModal.style.display = 'block';
    
    // Close company details modal if it's open
    companyModal.style.display = 'none';
  }
  
  // Handle "View Details" button clicks
  viewDetailsButtons.forEach(button => {
    button.addEventListener('click', function() {
      const companyId = this.getAttribute('data-company-id');
      const card = this.closest('.card');
      const companyData = card.querySelector('.company-data');
      
      // Populate modal with company data
      const modalCompanyName = document.getElementById('modalCompanyName');
      modalCompanyName.textContent = companyData.querySelector('.company-name').textContent;
      modalCompanyName.setAttribute('data-company-id', companyId);
      
      document.getElementById('modalDescription').textContent = companyData.querySelector('.company-description').textContent;
      document.getElementById('modalLocation').textContent = companyData.querySelector('.company-location').textContent;
      document.getElementById('modalSize').textContent = companyData.querySelector('.company-size').textContent;
      document.getElementById('modalFounded').textContent = companyData.querySelector('.company-founded').textContent;
      document.getElementById('modalSpecializations').textContent = companyData.querySelector('.company-specializations').textContent.split(',').join(', ');
      document.getElementById('modalOpenings').textContent = companyData.querySelector('.company-openings').textContent.split(',').join(', ');
      
      // Handle logo if available
      const logoElement = companyData.querySelector('.company-logo');
      if (logoElement) {
        document.getElementById('modalCompanyLogo').src = logoElement.textContent;
        document.getElementById('modalCompanyLogo').alt = companyData.querySelector('.company-name').textContent + " Logo";
      } else {
        document.getElementById('modalCompanyLogo').src = "https://via.placeholder.com/120";
        document.getElementById('modalCompanyLogo').alt = "Company Logo";
      }
      
      // Handle benefits - create list items
      const benefitsElement = companyData.querySelector('.company-benefits');
      const benefitsList = document.getElementById('modalBenefits');
      
      // Clear previous benefits
      benefitsList.innerHTML = '';
      
      if (benefitsElement && benefitsElement.textContent) {
        const benefits = benefitsElement.textContent.split(',');
        benefits.forEach(benefit => {
          if (benefit.trim()) {
            const li = document.createElement('li');
            li.textContent = benefit.trim();
            benefitsList.appendChild(li);
          }
        });
      } else {
        const li = document.createElement('li');
        li.textContent = 'Information not available';
        benefitsList.appendChild(li);
      }
      
      // Set apply button data
      document.getElementById('modalApplyButton').setAttribute('data-company-id', companyId);
      
      // Show the modal
      companyModal.style.display = 'block';
    });
  });
  
  // Event listeners for "Apply Now" buttons in company cards
  applyButtons.forEach(button => {
    button.addEventListener('click', function() {
      const companyId = this.getAttribute('data-company-id');
      const companyCard = this.closest('.card');
      const companyName = companyCard.querySelector('.company-name').textContent;
      
      openApplicationModal(companyId, companyName);
    });
  });
  
  // Event listener for "Apply Now" button in company details modal
  if (modalApplyButton) {
    modalApplyButton.addEventListener('click', function() {
      const companyId = this.getAttribute('data-company-id');
      const companyName = document.querySelector('#modalCompanyName').textContent;
      
      openApplicationModal(companyId, companyName);
    });
  }
  
  // Close modals when close button is clicked
  closeButtons.forEach(button => {
    button.addEventListener('click', function() {
      const modal = this.closest('.modal');
      modal.style.display = 'none';
    });
  });
  
  // Close application modal when cancel button is clicked
  if (cancelButton) {
    cancelButton.addEventListener('click', function() {
      applicationModal.style.display = 'none';
    });
  }
  
  // Close modals when clicking outside
  window.addEventListener('click', function(event) {
    if (event.target === applicationModal) {
      applicationModal.style.display = 'none';
    } else if (event.target === companyModal) {
      companyModal.style.display = 'none';
    }
  });
  
  // File upload UI enhancement
  const resumeUpload = document.getElementById('resumeUpload');
  const resumeInput = document.getElementById('resume');
  
  if (resumeUpload && resumeInput) {
    resumeUpload.addEventListener('click', function() {
      resumeInput.click();
    });
    
    resumeInput.addEventListener('change', function() {
      const fileName = this.files[0] ? this.files[0].name : 'No file selected';
      const fileLabel = resumeUpload.querySelector('.form-file-label');
      
      if (fileLabel) {
        fileLabel.textContent = fileName;
      }
      
      // Add a visual indicator that file is selected
      if (this.files[0]) {
        resumeUpload.classList.add('file-selected');
      } else {
        resumeUpload.classList.remove('file-selected');
      }
    });
  }
  
  // Form validation
  const jobApplicationForm = document.getElementById('jobApplicationForm');
  
  if (jobApplicationForm) {
    jobApplicationForm.addEventListener('submit', function(event) {
      const requiredFields = this.querySelectorAll('[required]');
      let isValid = true;
      
      requiredFields.forEach(field => {
        if (!field.value.trim()) {
          isValid = false;
          field.classList.add('error');
        } else {
          field.classList.remove('error');
        }
      });
      
      if (!isValid) {
        event.preventDefault();
        alert('Please fill in all required fields marked with *');
      }
    });
  }
  
  // Search functionality
  const searchInput = document.querySelector('.search-input');
  const searchButton = document.querySelector('.search-button');
  const companyCards = document.querySelectorAll('.card');
  
  if (searchInput && searchButton) {
    function performSearch() {
      const searchTerm = searchInput.value.toLowerCase();
      
      companyCards.forEach(card => {
        const companyData = card.querySelector('.company-data');
        const companyName = companyData.querySelector('.company-name').textContent.toLowerCase();
        const companyLocation = companyData.querySelector('.company-location').textContent.toLowerCase();
        const companySpecializations = companyData.querySelector('.company-specializations').textContent.toLowerCase();
        const companyOpenings = companyData.querySelector('.company-openings').textContent.toLowerCase();
        
        if (companyName.includes(searchTerm) || 
            companyLocation.includes(searchTerm) || 
            companySpecializations.includes(searchTerm) || 
            companyOpenings.includes(searchTerm)) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    }
    
    searchButton.addEventListener('click', performSearch);
    searchInput.addEventListener('keyup', function(event) {
      if (event.key === 'Enter') {
        performSearch();
      }
    });
  }
});
</script>
