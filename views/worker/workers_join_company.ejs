<!-- Join a Company Tab -->
<div id="join-company" class="tab-pane active">
  <div class="search-bar">
    <input type="text" class="search-input" placeholder="Search for construction companies by name, projects, or location...">
    <button class="search-button">Search</button>
  </div>
  
  <% companies.forEach(company => { %>
    <div class="card">
      <div class="company-data" style="display: none;">
        <span class="company-name"><%= company.companyName %></span>
        <span class="company-id"><%= company._id %></span>
        <% if (company.companyLogo) { %>
          <span class="company-logo"><%= company.companyLogo %></span>
        <% } %>
        <span class="company-location"><%= company.location.city %>, <%= company.location.state %></span>
        <span class="company-size"><%= company.size %></span>
        <span class="company-founded"><%= company.yearsInBusiness %></span>
        <span class="company-specializations"><%= company.specialization.join(",") %></span>
        <span class="company-openings"><%= company.currentOpenings.join(",") %></span>
        <span class="company-description"><%= company.aboutCompany %></span>
        <span class="company-benefits"><%= company.didYouKnow %></span>
        <% if (company.whyJoinUs) { %>
          <span class="company-why-join"><%= company.whyJoinUs %></span>
        <% } %>
      </div>
      <h3><%= company.companyName %></h3>
      <p><strong>Location:</strong> <%= company.location.city %></p>
      <p><strong>Company Size:</strong> <%= company.size %></p>
      <p><strong>Project types:</strong> <%= company.specialization.join(", ") %></p>
      <p><strong>Looking for:</strong> <%= company.currentOpenings.join(", ") %></p>
      <div>
        <% if (company.badges && company.badges.length > 0) { %>
          <% company.badges.forEach(badge => { %>
            <span class="badge <%= badge.class || 'badge-green' %>"><%= badge.text || badge %></span>
          <% }) %>
        <% } %>
      </div>
      <div class="card-footer">
        <button class="btn btn-primary view-details" data-company-id="<%= company._id %>">View Details</button>
        <button class="btn btn-primary apply-now" data-company-id="<%= company._id %>">Apply Now</button>
      </div>
    </div>
  <% }) %>
</div>

