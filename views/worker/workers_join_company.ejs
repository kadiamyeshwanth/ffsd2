        </div>

        <!-- 3. Skills & Expertise -->
        <div class="form-section">
          <h3 class="form-section-title">Skills & Specialties</h3>
          <div class="form-row">
            <div class="form-group full-width">
              <label for="primarySkills" class="form-label">Primary Skills/Specialties *</label>
              <input type="text" class="form-input" id="primarySkills" name="primarySkills" placeholder="e.g., Sustainable Design, BIM, Urban Planning" required>
              <p class="form-hint">Separate multiple skills with commas</p>
            </div>
