        <div class="form-section">
          <h3 class="form-section-title">Work Experience</h3>
          <div class="form-row">
            <div class="form-group full-width">
              <label for="workExperience" class="form-label">Previous Work Experience *</label>
              <textarea class="form-textarea" id="workExperience" name="workExperience" required></textarea>
            </div>
          </div>
