  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      background-color: #f5f5f5;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      height: 100vh;
    }
    .container {
      display: flex;
      max-width: 1400px;
      width: 90%;
      height: calc(95vh - 70px);
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      border-radius: 12px;
      overflow: hidden;
      margin: 20px auto;
    }

    .left-section {
      flex: 2;
      overflow-y: auto;
      padding: 30px;
      background-color: white;
      border-right: 1px solid #e0e0e0;
    }

    .right-section-details {
      flex: 1;
      padding: 0px 25px;
      background-color: #f0f4f8;
      color: #1a3c64;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      min-width: 350px;
      max-height: calc(95vh - 70px);
      overflow: hidden;
      
    }

    .company-header {
      display: flex;
      align-items: center;
      margin-bottom: 30px;
    }

    .company-logo {
      width: 80px;
      height: 80px;
      background-color: #1a3c64;
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 20px;
      font-size: 24px;
      font-weight: bold;
    }

    .right-logo {
      width: 70px;
      height: 70px;
      background-color: #1a3c64;
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 15px;
      font-size: 24px;
      font-weight: bold;
    }

    h1, h2 {
      margin-bottom: 20px;
      color: #1a3c64;
    }

    .right-section-details h1 {
      font-size: 24px;
      margin-bottom: 10px;
      color: #1a3c64;
    }

    .right-section-details h2 {
      font-size: 18px;
      margin-top: 15px;
      margin-bottom: 10px;
      border-bottom: 1px solid rgba(26,60,100,0.2);
      padding-bottom: 5px;
    }

    .section {
      margin-bottom: 40px;
    }

    .team-member {
      display: flex;
      margin-bottom: 20px;
      padding: 15px;
      border-radius: 8px;
      background-color: #f9f9f9;
    }

    .team-member img {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 15px;
    }

    .rating {
      color: #ffc107;
      margin-top: 5px;
    }

    .projects {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .project-card {
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .project-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .project-info {
      padding: 15px;
      background-color: white;
    }

    .services-list {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .service-item {
      padding: 15px;
      background-color: #f9f9f9;
      border-radius: 8px;
      display: flex;
      align-items: center;
    }

    .service-item i {
      margin-right: 10px;
      font-size: 24px;
      color: #1a3c64;
    }

    .certifications {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
    }

    .cert-badge {
      padding: 10px 15px;
      background-color: #e9f5ff;
      border-radius: 20px;
      color: #1a3c64;
      font-weight: bold;
    }

    .testimonial {
      padding: 20px;
      background-color: #f9f9f9;
      border-radius: 8px;
      margin-bottom: 20px;
      position: relative;
    }

    .testimonial::before {
      content: '"';
      font-size: 60px;
      color: #dddddd;
      position: absolute;
      top: 10px;
      left: 10px;
    }

    .testimonial-content {
      padding-left: 30px;
      position: relative;
      z-index: 1;
    }

    .tagline {
      font-style: italic;
      margin-bottom: 15px;
      font-size: 16px;
    }

    .core-stats {
      margin-bottom: 15px;
    }

    .stat-item {
      margin-bottom: 8px;
      display: flex;
      align-items: center;
    }

    .stat-item i {
      font-size: 18px;
      min-width: 25px;
    }

    .stat-item span {
      margin-left: 10px;
      font-size: 14px;
    }

    .book-now-btn {
      background-color: #ff6b35;
      color: white;
      border: none;
      padding: 12px 25px;
      font-size: 16px;
      border-radius: 8px;
      cursor: pointer;
      font-weight: bold;
      transition: background-color 0.3s;
      margin-top: 15px;
      width: 100%;
    }

    .book-now-btn:hover {
      background-color: #e55a2b;
    }

    .quality-item {
      display: flex;
      align-items: center;
      margin-bottom: 12px;
    }

    .quality-item i {
      color: #48c774;
      margin-right: 10px;
      font-size: 18px;
    }

    .progress-container {
      width: 100%;
      background-color: rgba(26,60,100,0.1);
      border-radius: 10px;
      margin-bottom: 10px;
    }

    .progress-bar {
      height: 8px;
      border-radius: 10px;
      background-color: #838080;
    }

    .progress-label {
      display: flex;
      justify-content: space-between;
      margin-bottom: 3px;
      font-size: 14px;
    }

    .right-footer {
