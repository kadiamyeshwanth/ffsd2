    }

    .left-section::-webkit-scrollbar-track {
      background: #f1f1f1;
    }

    .left-section::-webkit-scrollbar-thumb {
      background: #c9c9c9;
      border-radius: 10px;
    }

    .left-section::-webkit-scrollbar-thumb:hover {
      background: #a8a8a8;
    }

    .quality-metrics {
      margin-bottom: 15px;
    }

    .quality-metric {
      margin-bottom: 8px;
    }

    @media (max-width: 1100px) {
      .container {
        flex-direction: column;
        height: auto;
      }

