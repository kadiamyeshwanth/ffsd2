    <script>
        /* Same JavaScript as in the first HTML code, adapted for EJS data */
        document.addEventListener('DOMContentLoaded', function() {
            // Tab functionality
            const tabs = document.querySelectorAll('.nav-link');
            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    tabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    document.querySelectorAll('.tab-pane').forEach(pane => pane.classList.remove('active'));
                    document.getElementById(this.getAttribute('data-tab')).classList.add('active');
                });
            });

            // Search functionality
            const searchInput = document.querySelector('.search-input');
            const searchButton = document.querySelector('.search-button');
            searchButton.addEventListener('click', function() {
                searchButton.classList.add('loading');
                setTimeout(() => searchButton.classList.remove('loading'), 1000);
                const searchTerm = searchInput.value.toLowerCase().trim();
                document.querySelectorAll('#join-company .card').forEach(card => {
                    const cardText = card.textContent.toLowerCase();
                    card.style.display = cardText.includes(searchTerm) || !searchTerm ? 'block' : 'none';
                });
            });

            // Filter chip functionality
            const filterChips = document.querySelectorAll('.filter-chip');
            filterChips.forEach(chip => {
                chip.addEventListener('click', function() {
                    filterChips.forEach(c => c.classList.remove('active'));
                    this.classList.add('active');
                    const filter = this.textContent.toLowerCase();
                    document.querySelectorAll('.timeline-item').forEach(item => {
                        const itemText = item.textContent.toLowerCase();
                        item.style.display = filter === 'all' || 
                                           (filter === 'expired' && itemText.includes('expired')) || 
                                           (filter === 'declined' && itemText.includes('declined')) 
                                           ? 'block' : 'none';
                    });
                });
            });

            // Company data (populated from EJS)
            const companies = <%- JSON.stringify(companies) %>;

            // Modal functionality for company details
            const companyModal = document.getElementById('companyModal');
            const viewDetailButtons = document.querySelectorAll('.view-details');
            const closeCompanyModal = companyModal.querySelector('.close-modal');

            viewDetailButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const companyId = this.getAttribute('data-company');
                    const company = companies.find(c => c.id === companyId);
                    
                    document.getElementById('modalCompanyName').textContent = company.name;
                    document.getElementById('modalCompanyLogo').src = company.logo;
                    document.getElementById('modalLocation').textContent = company.location;
                    document.getElementById('modalSize').textContent = company.size;
                    document.getElementById('modalFounded').textContent = company.founded;
                    document.getElementById('modalDescription').textContent = company.description;
                    
                    const specializationsEl = document.getElementById('modalSpecializations');
                    specializationsEl.innerHTML = company.specializations.map(spec => `<span class="badge badge-green">${spec}</span>`).join('');
                    
                    const openingsEl = document.getElementById('modalOpenings');
                    openingsEl.innerHTML = company.lookingFor.map(opening => `<span class="badge badge-blue">${opening}</span>`).join('');
                    
                    const benefitsEl = document.getElementById('modalBenefits');
                    benefitsEl.innerHTML = company.benefits.map(benefit => `<li>${benefit}</li>`).join('');
                    
                    companyModal.style.display = 'block';
                    document.body.style.overflow = 'hidden';
                });
            });

            // ... Include the rest of the JavaScript from the first HTML code ...
            // For brevity, I'm not repeating the full script, but it should be adapted similarly
        });
    </script>
