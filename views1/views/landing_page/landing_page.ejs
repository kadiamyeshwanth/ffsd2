<body>
  <nav class="navbar">
    <div class="logo">Build & Beyond</div>
    <input type="checkbox" id="click">
    <label for="click" class="menu">
      <i class='bx bx-menu'></i>
      <i class='bx bx-x'></i>
    </label>
    <ul class="mid-nav">
      <li><a href="/">HOME</a></li>
      <li><a href="/users">USERS</a></li>
      <li><a href="/about">ABOUT</a></li>
      <li><a href="/contact">CONTACT</a></li>
    </ul>
    <a href="/signin_up" style="text-decoration: none;"><div class="right-nav">Login/SignUp</div></a>
  </nav>

  <!-- Dynamic Content Sections -->
  <% if (page === 'home') { %>
      <div class="content">
          <h1>Welcome to Build & Beyond</h1>
          <p><%= homeData.welcomeMessage %></p>
          <div class="btn-container">
              <button class="btn">Learn More</button>
              <a href="/signin_up"><button class="btn">Let's Get Started</button></a>
          </div>
      </div>

      <section class="about-section">
          <div class="image-container">
              <img src="https://cdn.pixabay.com/photo/2021/10/26/21/17/worker-6745180_640.jpg" alt="Team Working">
          </div>
          <div class="content-container">
              <h2>Who We Are</h2>
              <p><%= homeData.aboutText1 %></p>
              <p><%= homeData.aboutText2 %></p>
              <button class="cta-button">Learn More About Us →</button>
          </div>
      </section>

  <% } else if (page === 'users') { %>
      <div class="container">
          <h1>User Profiles</h1>
          <div class="cards-container">
              <% users.forEach(user => { %>
                  <div class="card">
                      <div class="avatar-container">
                          <svg class="avatar-icon" viewBox="0 0 300 300" fill="#000">
                              <circle cx="150" cy="150" r="145" stroke="#5e135e" stroke-width="10" fill="white"/>
                              <circle cx="150" cy="100" r="50"/>
                              <path d="M 60 230 C 60 170 240 170 240 230 L 240 260 C 240 270 60 270 60 260 Z"/>
                          </svg>
                      </div>
                      <h2 class="name"><%= user.name %></h2>
                      <p class="details"><%= user.description %></p>
                  </div>
              <% }); %>
          </div>
      </div>

  <% } else if (page === 'about') { %>
      <section class="aboutus-section-1">
          <h1>About Us</h1>
          <p><%= aboutData.mainDescription %></p>

          <div class="about-content-1">
              <div class="details-1">
                  <h3>Our Mission</h3>
                  <p><%= aboutData.mission %></p>

                  <h3>What We Offer</h3>
                  <ul>
                      <% aboutData.services.forEach(service => { %>
                          <li><%= service %></li>
                      <% }); %>
                  </ul>
              </div>
          </div>

          <p><%= aboutData.additionalInfo %></p>
      </section>

      <section class="testimonial-section">
          <h2>What Our Clients Say</h2>
          <div class="testimonials">
              <% aboutData.testimonials.forEach(testimonial => { %>
                  <div class="testimonial-card">
                      <img src="<%= testimonial.image %>" alt="<%= testimonial.name %>">
                      <h4><%= testimonial.name %></h4>
                      <p>"<%= testimonial.text %>"</p>
                  </div>
              <% }); %>
          </div>
      </section>

  <% } else if (page === 'contact') { %>
      <div class="dot-background"></div>
      <div class="container-2">
          <h1>Contact Us</h1>
          <div class="separator-2"></div>
          
          <div class="content-wrapper-2">
              <div class="form-section-2">
                  <form action="/contact" method="POST">
                      <div class="form-row-2">
                          <input type="text" name="firstName" placeholder="First Name" required>
                          <input type="text" name="lastName" placeholder="Last Name" required>
                      </div>
                      <div class="form-row-2">
                          <input type="email" name="email" placeholder="Email" required>
                      </div>
                      <div class="form-row-2">
                          <textarea name="message" placeholder="Please write your message here" required></textarea>
                      </div>
                      <button type="submit" class="submit-btn">SUBMIT</button>
                  </form>
              </div>
              
              <div class="contact-info-2">
                  <div class="info-item-2">
                      <a href="<%= contactData.mapLink %>" target="_blank">
                          <div class="icon-2">
                              <i class="fas fa-map-marker-alt"></i>
                          </div>
                          <div class="info-content"><%= contactData.address %></div>
                      </a>
                  </div>
                  <div class="info-item-2">
                      <a href="tel:<%= contactData.phone %>">
                          <div class="icon-2">
                              <i class="fas fa-phone-alt"></i>
                          </div>
                          <div class="info-content"><%= contactData.phone %></div>
                      </a>
                  </div>
                  <div class="info-item-2">
                      <a href="mailto:<%= contactData.email %>">
                          <div class="icon-2">
                              <i class="fas fa-envelope"></i>
                          </div>
                          <div class="info-content"><%= contactData.email %></div>
                      </a>
                  </div>
                  <div class="info-item-2">
                      <a href="<%= contactData.socialMedia.instagram %>" target="_blank">
                          <div class="icon-2">
                              <i class="fab fa-instagram"></i>
                          </div>
                          <div class="info-content">Build&Beyond</div>
                      </a>
                  </div>
              </div>
          </div>
      </div>
  <% } %>

  <footer class="footer">
      <div class="footer-content">
          <div class="footer-section">
              <h3>Quick Links</h3>
              <ul>
                  <li><a href="/">Home</a></li>
                  <li><a href="/services">Services</a></li>
                  <li><a href="/professionals">Find Professionals</a></li>
                  <li><a href="/projects">Projects</a></li>
                  <li><a href="/contact">Contact</a></li>
              </ul>
          </div>

          <div class="footer-section">
              <h3>Services</h3>
              <ul>
                  <% footerServices.forEach(service => { %>
                      <li><a href="#"><%= service %></a></li>
                  <% }); %>
              </ul>
          </div>

          <div class="footer-section">
              <h3>Contact Info</h3>
              <ul>
                  <li><%= contactData.address %></li>
                  <li>Phone: <%= contactData.phone %></li>
                  <li>Email: <%= contactData.email %></li>
              </ul>
              <div class="social-links">
                  <a href="#"><i class="fab fa-facebook"></i></a>
                  <a href="#"><i class="fab fa-twitter"></i></a>
                  <a href="<%= contactData.socialMedia.instagram %>"><i class="fab fa-instagram"></i></a>
                  <a href="#"><i class="fab fa-linkedin"></i></a>
              </div>
          </div>
      </div>

      <div class="footer-bottom">
          <p>&copy; 2025 Build & Beyond. All rights reserved.</p>
      </div>
  </footer>
</body>
</html>