    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            background-color: #f5f5f5;
            color: #333333;
            line-height: 1.6;
        }
        a.company-card {
        text-decoration: none;
        color: inherit;
        display: block;
        }
        /* Filter Section */
        .filter-section {
            display: flex;
            justify-content: center;
            gap: 20px;
            padding: 20px;
            background: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .filter-section select {
            padding: 10px 18px;
            border-radius: 8px;
            border: 1px solid #ddd;
            font-size: 16px;
            background: #ffffff;
            cursor: pointer;
            transition: border-color 0.3s ease;
        }

        .filter-section select:hover {
            border-color: #007bff;
        }

        .filter-section select:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        /* Card Container */
        .company-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 20px;
            padding: 20px;
            max-width: 1200px;
            margin: auto;
        }

        /* Company Card */
        .company-card {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        .company-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .company-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .company-info {
            padding: 20px;
            text-align: center;
        }

        .company-logo {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            margin-top: -35px;
            border: 4px solid white;
            background: white;
        }

        .company-name {
            font-size: 20px;
            font-weight: bold;
            margin-top: 10px;
            color: #3a7bd5;
        }

        .company-details {
            font-size: 14px;
            color: #666;
            margin: 8px 0;
        }

        .trust-badges {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin: 15px 0;
        }

        .trust-badges img {
            width: 35px;
            height: 35px;
        }

        .rating {
            color: #f4b400;
            font-size: 16px;
            margin-bottom: 10px;
        }

        .contact-button {
            display: inline-block;
            background: #e9c46a;
            color: white;
            padding: 10px 18px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
            transition: background 0.3s ease;
        }

        .contact-button:hover {
            background: #e2b230;
        }
    </style>
</head>
