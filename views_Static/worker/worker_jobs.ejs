            jobListContainer.addEventListener('click', function(e) {
                const jobCard = e.target.closest('.job-card');
                if (jobCard) {
                    document.querySelectorAll('.job-card').forEach(card => 
                        card.classList.remove('active')
                    );
                    jobCard.classList.add('active');
                    const jobId = parseInt(jobCard.dataset.id);
                    const selectedJob = jobOffers.find(job => job.id === jobId);
                    if (selectedJob) {
                        renderJobDetails(selectedJob);
                    }
                }
            });
        }

        function renderJobDetails(job) {
            emptyState.style.display = 'none';
            jobDetailsContent.style.display = 'block';
            jobDetailsContent.innerHTML = `
                <div class="details-header">
                    <div class="details-header-left">
                        <h2>${job.title}</h2>
                        <span class="job-type ${job.type.toLowerCase()}">${job.type}</span>
                        <p class="job-budget">${job.budget}</p>
                    </div>
                    <div class="details-header-right">
                        <p class="detail-label">Preferred Completion</p>
                        <p class="detail-value">${job.preferredCompletionDate}</p>
                    </div>
                </div>
                <div class="details-section">
                    <h3><i class="fas fa-user"></i> Customer Details</h3>
                    <div class="details-grid">
                        <div class="detail-item">
                            <p class="detail-label">Name</p>
                            <p class="detail-value">${job.customerDetails.fullName}</p>
                        </div>
                        <div class="detail-item">
                            <p class="detail-label">Contact</p>
                            <p class="detail-value">${job.customerDetails.contactNumber}</p>
                        </div>
                        <div class="detail-item">
                            <p class="detail-label">Email</p>
                            <p class="detail-value">${job.customerDetails.email}</p>
                        </div>
                        <div class="detail-item">
                            <p class="detail-label">Address</p>
                            <p class="detail-value">${job.customerDetails.address.street}, ${job.customerDetails.address.city}, ${job.customerDetails.address.state} ${job.customerDetails.address.zipCode}</p>
                        </div>
                    </div>
                </div>
                <div class="details-section">
                    <h3><i class="fas fa-map-marker-alt"></i> Plot Information</h3>
                    <div class="details-grid">
                        <div class="detail-item">
                            <p class="detail-label">Location</p>
                            <p class="detail-value">${job.plotInfo.location}</p>
                        </div>
                        <div class="detail-item">
                            <p class="detail-label">Size</p>
                            <p class="detail-value">${job.plotInfo.size}</p>
                        </div>
                        <div class="detail-item">
                            <p class="detail-label">Orientation</p>
                            <p class="detail-value">${job.plotInfo.orientation}</p>
                        </div>
                        <div class="detail-item">
                            <p class="detail-label">Floors</p>
                            <p class="detail-value">${job.plotInfo.floors}</p>
                        </div>
                        <div class="detail-item">
                            <p class="detail-label">Room Requirements</p>
                            <p class="detail-value">${job.plotInfo.roomRequirements}</p>
                        </div>
                        <div class="detail-item">
                            <p class="detail-label">Preferred Style</p>
                            <p class="detail-value">${job.plotInfo.preferredStyle}</p>
                        </div>
                    </div>
                    <div class="special-features">
                        <p class="detail-label">Special Features</p>
                        <p class="detail-value">${job.plotInfo.specialFeatures}</p>
                    </div>
                </div>
                <div class="details-section">
                    <h3><i class="fas fa-images"></i> Reference Images</h3>
                    <div class="reference-images">
                        ${job.referenceImages.map(img => `
                            <div class="reference-image" style="background-image: url('${img}')"></div>
                        `).join('')}
                    </div>
                </div>
                <div class="job-action-buttons">
                    <button class="job-action-button accept-button" onclick="acceptJob(${job.id})">
                        <i class="fas fa-check"></i> Accept Job
                    </button>
                    <button class="job-action-button deny-button" onclick="denyJob(${job.id})">
                        <i class="fas fa-times"></i> Deny Job
                    </button>
                </div>
            `;
        }

        function acceptJob(jobId) {
            alert(`Job #${jobId} accepted! You can now contact the client.`);
        }

        function denyJob(jobId) {
            const confirmDeny = confirm(`Are you sure you want to deny Job #${jobId}?`);
            if (confirmDeny) {
                alert(`Job #${jobId} has been removed from your listings.`);
            }
        }

        document.addEventListener('DOMContentLoaded', initApp);
    </script>
</body>
</html>