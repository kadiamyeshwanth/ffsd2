  gap: 10px;
  margin-bottom: 20px;
}

.filter-chip {
  padding: 5px 15px;
  background-color: #f0f0f0;
  border-radius: 20px;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.filter-chip:hover {
  background-color: #e0e0e0;
}

.filter-chip.active {
  background-color: #2e7d32;
  color: white;
}

.notification-badge {
