  <div class="container">
    <h1>Join a company</h1>
    
    <div class="profile-header">
      <div>
        <h2>Welcome, <%= user.name %></h2>
        <p><%= user.title %></p>
      </div>
      <button class="btn btn-outline">Edit Profile</button>
    </div>
    <div class="profile-header">
        <img src="<%= user.profileImage %>" alt="<%= user.name %>" class="profile-image">
        <div class="profile-info">
            <h1><%= user.name %></h1>
            <div class="profile-title"><%= user.title %> with <%= user.experience %> years experience</div>
            <div class="rating"><%= user.rating %></div>
        </div>
    </div>
    
    <div class="section about-section">
        <h2 class="section-title">About</h2>
        <div class="about-content">
            <p><%= user.bio %></p>
            <div class="specialties">
                <strong>Specialties:</strong> <span><%= user.specialties.join(', ') %></span>
            </div>
        </div>
    </div>
    
    <div class="section projects-section">
        <h2 class="section-title">Notable Projects</h2>
        
        <% user.projects.forEach(project => { %>
        <div class="project-card">
            <div class="project-details">
                <div class="project-title">
                    <h3><%= project.name %></h3>
                    <span>(<%= project.year %>)</span>
                </div>
                <div class="project-location">
                    <strong>Location:</strong> <%= project.location %>
                </div>
            </div>
            <img src="<%= project.image %>" alt="<%= project.name %>" class="project-image">
            <div class="project-details">
                <p class="project-description"><%= project.description %></p>
            </div>
        </div>
        <% }); %>
    </div>
    
    <div class="profile-stats">
      <div class="stat-box">
        <div class="stat-number"><%= typeof stats !== 'undefined' && stats && stats.applications ? stats.applications : 'Not provided' %></div>
        <div class="stat-label">Applications</div>
      </div>
      <div class="stat-box">
        <div class="stat-number"><%= typeof stats !== 'undefined' && stats && stats.offers ? stats.offers : 'Not provided' %></div>
        <div class="stat-label">Offers</div>
      </div>
      <div class="stat-box">
        <div class="stat-number"><%= typeof stats !== 'undefined' && stats && stats.experience ? stats.experience : 'Not provided' %></div>
        <div class="stat-label">Years Experience</div>
      </div>
    </div>
    
    <ul class="nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" data-tab="join-company">Join a Company</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-tab="accept-offers">Accept Offers</a>
      </li>
    </ul>
    
    <div class="tab-content">
      <!-- Join a Company Tab -->
      <div id="join-company" class="tab-pane active">
        <div class="search-bar">
          <input type="text" class="search-input" placeholder="Search for construction companies by name, projects, or location...">
          <button class="search-button">Search</button>
        </div>
        
        <% if (typeof companies !== 'undefined' && companies && companies.length > 0) { %>
          <% companies.forEach(company => { %>
          <div class="card">
            <h3><%= company.name %></h3>
            <p><strong>Location:</strong> <%= company.location || 'Not provided' %></p>
            <p><strong>Company Size:</strong> <%= company.size || 'Not provided' %></p>
            <p><strong>Project types:</strong> <%= company.projectTypes && company.projectTypes.length ? company.projectTypes.join(', ') : 'Not provided' %></p>
            <p><strong>Looking for:</strong> <%= company.positions && company.positions.length ? company.positions.join(', ') : 'Not provided' %></p>
            <div>
              <% if (company.tags && company.tags.length > 0) { %>
                <% company.tags.forEach(tag => { %>
                  <span class="badge <%= tag.class || '' %>"><%= tag.name %></span>
                <% }); %>
              <% } else { %>
                <span>No tags available</span>
              <% } %>
            </div>
            <div class="card-footer">
              <button class="btn btn-primary view-details" data-company="<%= company.id %>">View Details</button>
              <button class="btn btn-primary">Apply Now</button>
            </div>
          </div>
          <% }); %>
        <% } else { %>
          <div class="empty-state">
            <p>No companies available at the moment. Please check back later or refine your search.</p>
          </div>
        <% } %>
      </div>
      
      <!-- Accept Offers Tab -->
      <div id="accept-offers" class="tab-pane">
        <h2>Your Current Offers</h2>
        <p>Companies that have invited you to join their team</p>
        
        <% if (typeof currentOffers !== 'undefined' && currentOffers && currentOffers.length > 0) { %>
          <% currentOffers.forEach(offer => { %>
          <div class="card">
            <h3><%= offer.company || 'Company name not provided' %></h3>
            <p><strong>Position:</strong> <%= offer.position || 'Not provided' %></p>
            <p><strong>Location:</strong> <%= offer.location || 'Not provided' %></p>
            <p><strong>Salary Range:</strong> <%= offer.salary || 'Not provided' %></p>
            <p><strong>Offer Expires:</strong> <%= offer.expires || 'Not provided' %> 
              <%= offer.daysRemaining ? `(${offer.daysRemaining} days remaining)` : '' %></p>
            <div class="card-footer">
              <button class="btn btn-outline">Decline</button>
              <button class="btn btn-primary">Accept Offer</button>
            </div>
          </div>
          <% }); %>
        <% } else { %>
          <div class="empty-state">
            <p>You currently have no offers from companies. Apply to positions to receive offers.</p>
          </div>
        <% } %>
        
        <h2 class="past-offers">Past Offers</h2>
        <div class="filter-options">
          <div class="filter-chip active">All</div>
          <div class="filter-chip">Expired</div>
          <div class="filter-chip">Declined</div>
        </div>
        
        <div class="timeline">
          <% if (typeof pastOffers !== 'undefined' && pastOffers && pastOffers.length > 0) { %>
            <% pastOffers.forEach(offer => { %>
            <div class="timeline-item">
              <div class="timeline-date"><%= offer.date || 'Date not provided' %></div>
              <div class="card">
                <h3><%= offer.company || 'Company name not provided' %></h3>
                <p><strong>Position:</strong> <%= offer.position || 'Not provided' %></p>
                <p><strong>Location:</strong> <%= offer.location || 'Not provided' %></p>
                <p><strong>Status:</strong> <%= offer.status || 'Not provided' %></p>
              </div>
            </div>
            <% }); %>
          <% } else { %>
            <div class="empty-state">
              <p>No past offers to display.</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

