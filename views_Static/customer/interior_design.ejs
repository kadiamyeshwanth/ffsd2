                card.dataset.id = architect.id;
                
                card.innerHTML = `
                    <img src="${architect.image}" alt="${architect.name}" class="architect-image-small">
                    <div class="architect-info">
                        <h3>${architect.name}</h3>
                        <p>${architect.title}</p>
                        <p>${architect.experience} experience</p>
                        ${renderRating(architect.rating)}
                    </div>
                `;
                
                card.addEventListener('click', () => {
                    // Remove active class from all cards
                    document.querySelectorAll('.architect-card').forEach(el => {
                        el.classList.remove('active');
                    });
                    
                    // Add active class to clicked card
                    card.classList.add('active');
                    
                    // Show architect details
                    showArchitectDetails(architect.id);
                });
                
                architectList.appendChild(card);
            });
        }
        
        // to show architect details
        function showArchitectDetails(architectId) {
