    :root {
        --primary-green: #4D7A70;
        --secondary-green: #6A9E8E;
        --light-green: #A3C5BB;
        --dark-grey: #363636;
        --medium-grey: #5A5A5A;
        --light-grey: #E0E0E0;
        --white: #FFFFFF;
        --black: #000000;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body {
        background-color: var(--white);
        color: var(--black);
    }

    .logo {
        font-size: 1.5rem;
        font-weight: bold;
        display: flex;
        align-items: center;
    }

    .logo span {
        color: var(--light-green);
    }

    .profile {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
    }

    .profile-img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: var(--light-green);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--dark-grey);
        font-weight: bold;
    }

    .main-content {
        padding: 2rem;
    }

    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .dashboard-title {
        font-size: 1.8rem;
        color: var(--primary-green);
    }

    .search-bar {
        position: relative;
        width: 300px;
    }

    .search-bar input {
        width: 100%;
        padding: 0.75rem 1rem;
        border-radius: 30px;
        border: 1px solid var(--light-grey);
        outline: none;
        padding-left: 40px;
    }

    .search-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--medium-grey);
    }

    .tabs {
        display: flex;
        border-bottom: 1px solid var(--light-grey);
        margin-bottom: 2rem;
    }

    .tab {
        padding: 1rem 2rem;
        cursor: pointer;
        font-weight: 500;
        color: var(--medium-grey);
        position: relative;
    }

    .tab.active {
        color: var(--primary-green);
        font-weight: 600;
    }

    .tab.active::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -1px;
        width: 100%;
        height: 3px;
        background-color: var(--primary-green);
    }

    .filter-section {
        background-color: var(--white);
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        margin-bottom: 2rem;
    }

    .filter-row {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .filter-field {
        flex: 1;
        min-width: 200px;
    }

    .filter-field label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--medium-grey);
    }

    .filter-field select, .filter-field input {
        width: 100%;
        padding: 0.75rem;
        border-radius: 4px;
        border: 1px solid var(--light-grey);
        background-color: var(--white);
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        border: none;
        cursor: pointer;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: var(--primary-green);
        color: var(--white);
    }

    .btn-primary:hover {
        background-color: var(--secondary-green);
    }

    .btn-secondary {
        background-color: var(--white);
        color: var(--primary-green);
        border: 1px solid var(--primary-green);
    }

    .btn-secondary:hover {
        background-color: var(--light-grey);
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
    }

    .sort-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .result-count {
        color: var(--medium-grey);
    }

    .sort-by {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .sort-by select {
        padding: 0.5rem;
        border-radius: 4px;
        border: 1px solid var(--light-grey);
    }

    .workers-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .worker-card {
        background-color: var(--white);
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

    .worker-card:hover {
        transform: translateY(-5px);
    }

    .worker-banner {
        height: 80px;
        background-color: var(--secondary-green);
        position: relative;
    }

    .worker-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: var(--light-green);
        border: 4px solid var(--white);
        position: absolute;
        bottom: -40px;
        left: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--dark-grey);
        font-weight: bold;
        font-size: 1.5rem;
    }

    .worker-info {
        padding: 2.5rem 1.5rem 1.5rem;
    }

    .worker-name {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .worker-title {
        color: var(--medium-grey);
        margin-bottom: 1rem;
    }

    .worker-stats {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-top: 1px solid var(--light-grey);
        color: var(--medium-grey);
        font-size: 0.9rem;
    }

    .badge {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
        margin-right: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .badge-blue {
        background-color: rgba(21, 28, 84, 0.1);
        color: var(--primary-green);
    }

    .badge-orange {
        background-color: rgba(255, 184, 0, 0.1);
        color: #C07800;
    }

    .card-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .card-actions button {
        flex: 1;
    }

    .tab-content {
        display: none;
    }

    .tab-content.active {
        display: block;
    }

    .request-list {
        background-color: var(--white);
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .request-item {
        padding: 1.5rem;
        border-bottom: 1px solid var(--light-grey);
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .request-item:last-child {
        border-bottom: none;
    }

    .request-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: var(--secondary-green);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--white);
        font-weight: bold;
        font-size: 1.2rem;
    }

    .request-details {
